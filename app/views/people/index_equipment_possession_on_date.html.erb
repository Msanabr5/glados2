
<% item_count = aggregate_possession_contracts(@people).count %>
<%= render :partial => "header_equipment_possession_on_date", :locals => { :date => @date, :item_count => item_count } %>


<table class="table table-striped", border="1">
  <tr>
    <th> Name </th>
    <th> Amount Owed</th>
  </tr>
    <% @people.each do | person | %>
   <tr>
    <td> <%= link_to person.name, show_person_equipment_path(person.id) %> </td>
    <td border="1"> <%= number_to_currency(lease_total_payments(person.possession_contracts))  %> </td>
  </tr>
  <% end %>
   <tr>
    <td colspan=1> </td>
    <td border="1"> Total <%= number_to_currency(lease_total_payments(aggregate_possession_contracts(@people)))  %> </td>
  </tr>
</table>
<div class="digg_pagination">
    <%= will_paginate @people, :container => false %>
  </div>