<div class = "row">
  <div class="span3"><h3>Equipment for Lab </h3></div>
  <div class="span4 offset5"><h3>Report for: <%= @date %></h3></div>
  <div class="span5"><h3>Showing <span class="badge" style="background-color:#0000FF;"><%= count_equipment_owned(@people) %></span> items</h3></div>
</div>
<table class="table table-striped", border="1">
  <tr>
    <th> Make </th>
    <th> Model </th>
    <th> Serial Number </th>
    <th> Contract Type </th>
    <th> Amount Owed</th>
  </tr>
<% @people.each do |person| %>
  <tr>
    <% person.possession_contracts.each do | pos_contract | %>
    <td> <%= pos_contract.equipment.make %> </td>
    <td> <%= pos_contract.equipment.model %> </td>
    <td> <%= pos_contract.equipment.serial_number %> </td>
    <td> <%= pos_contract.contract_type  %> </td>
    <td border="1"> <%= cents_to_dollars(pos_contract.payment) %></td>
  </tr>
  <% end %>
<% end %>
</table>
<div class = "row">
  <div class="span3 offset9">Total Goes here:</div>
</div>
