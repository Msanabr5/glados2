<div class= "row">
  <div class="span4 offset8" id="glados3" data-date=<%= @date.strftime "%m/%d/%Y"%> data-date-format="mm/dd/yyyy"></div>
</div>
<div class = "row">
  <div class="span3"><h3>Equipment for Lab </h3></div>
  <div class="span4 offset5"><h3>Report for: <%= @date %></h3></div>
  <% item_count = aggregate_possession_contracts(@people).count %>
  <div class="span5"><h3>Showing <%= "#{item_count}" + " item".pluralize(item_count) %></h3></div>
</div>



<table class="table table-striped", border="1">
  <tr>
    <th> Name </th>
    <th> Amount Owed</th>
  </tr>
    <% @people.each do | person | %>
   <tr>
    <td> <%= link_to person.name, show_person_equipment_path(person.id) %> </td>
    <td border="1"> <%= number_to_currency(lease_total_payments(person.possession_contracts))  %> </td>
  </tr>
  <% end %>
   <tr>
    <td colspan=1> </td>
    <td border="1"> Total <%= number_to_currency(lease_total_payments(aggregate_possession_contracts(@people)))  %> </td>
  </tr>
</table>
