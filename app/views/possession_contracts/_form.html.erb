<%= semantic_form_for @possession_contract do |f| %>
  <% f.semantic_errors :base %>
  <%= f.inputs do %>
    <div class="row"><div class="span2">Person: </div><div class="span5"><%= f.input :person, :as => :select, :collection => Person.find(:all, :order => :name), :label=> false %></div></div>
    <% equipment_make_model_array = Equipment.find(:all, :order => :make).map { |equipment|  [equipment.make + ' ' + equipment.model, equipment.id] } %>
    <div class="row"><div class="span2">Equipment: </div><div class="span5"><%= f.input :equipment, :as => :select, :collection => equipment_make_model_array , :label => false %></div></div>
     <div class="row"><div class="span2">Contract Type: </div><div class="span5"><%= f.input :contract_type, :as => :select, :collection => PossessionContract::ALL_CONTRACT_TYPES, :label => false %></div></div>
     <div class="row"><div class="span2">Payment ($): </div><div class ="span3"><%= f.input :payment, :label => false %></div></div>
    <div class="row"><div class="span2">Expires: </div><div class="span5"><%= f.input :expires, :as => :date_picker, :label=> false %></div></div>
  <% end %>
  <%= f.actions %>
<% end %>
