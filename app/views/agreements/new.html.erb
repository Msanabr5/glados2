<%= semantic_form_for @agreement do |f| %>
 <%= f.semantic_errors :state %>
  <%= f.inputs do %>
    <div class="row"><div class="span1">Name: </div><div class ="Span3"><%= f.input :name , :input_html => { :size => 20, :class => "override-width" }, :label => false %></div></div>
    <div class="row"><div class="span1">Author: </div><div class ="Span3"><%= f.input :author, :as => :select, :collection => Agreement::ALL_AUTHOR_TYPES, :label => false%></div></div>
<div class="row"><div class ="span1">version: </div><div class ="Span3"<%= f.input :version, :input_html => { :class => "override-width" }, :label => false %></div></div>
  <% end %>
  <%= f.actions %>
<% end %>
